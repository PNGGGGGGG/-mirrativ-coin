<div class="container">
  <div class="coin-row">
    <div class="coin-icon">M</div>
    <div class="coin-label">無償コイン</div>
    <input type="number" id="freeCoin" placeholder="数字を入力" oninput="calculate()">
  </div>

  <div class="coin-row">
    <div class="coin-icon">M</div>
    <div class="coin-label">有償コイン</div>
    <input type="number" id="paidCoin" placeholder="数字を入力" oninput="calculate()">
  </div>

  <div class="result">
    <div class="result-label">【還元コイン】</div>
    <div id="resultValue">0コイン</div>
  </div>
</div>

<script>
function calculate() {
  const free = parseFloat(document.getElementById('freeCoin').value) || 0;
  const paid = parseFloat(document.getElementById('paidCoin').value) || 0;

  const freeResult = free * 0.3; // 70%引く → 30%残る
  const paidResult = paid * 0.9; // 10%引く → 90%残る

  const total = Math.floor(freeResult + paidResult); // 小数点以下切り捨て

  document.getElementById('resultValue').textContent = total + "コイン";
}
</script>

